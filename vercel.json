{
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                },
                {
                    "key": "X-Robots-Tag",
                    "value": "index, follow"
                }
            ]
        },
        {
            "source": "/(.*).(jpg|jpeg|png|webp|svg|css|js)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ],
    "redirects": [
        {
            "source": "/((?!index.html|favicon.svg|_vercel).*)$",
            "destination": "/",
            "permanent": false
        }
    ]
}